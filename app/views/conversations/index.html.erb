<div class="p-4">
  <h1 class="text-2xl font-semibold mb-4 text-gray-800">Conversations</h1>

  <div class="mb-4">
    <!-- Add tabs for conversations and new conversation form -->
    <nav>
      <ul class="flex">
        <li class="mr-6">
          <a class="text-blue-600" href="#conversations" data-turbo-frame="conversations">Conversations</a>
        </li>
        <li>
          <a class="text-green-600" href="#new_conversation" data-turbo-frame="new_conversation">New Conversation</a>
        </li>
      </ul>
    </nav>
  </div>

  <!-- Turbo Frame for the conversation list -->
  <turbo-frame id="conversations" target="_top">
    <!-- List of conversations will be displayed here -->
    <div class="grid gap-4 grid-cols-3">
      <% @conversations.each do |conversation| %>
        <div class="bg-white p-4 rounded-lg shadow-md border border-gray-300">
          <p class="text-lg font-semibold text-gray-800">Conversation <%= conversation.id %></p>
          <p class="text-sm text-gray-800">Last message: <%= conversation.last_message %></p>
        </div>
      <% end %>
    </div>
  </turbo-frame>

  <!-- Turbo Frame for the new conversation form -->
  <turbo-frame id="new_conversation" src="/conversations/new" target="_top">
    <!-- New conversation form will be displayed here -->
  </turbo-frame>
</div>